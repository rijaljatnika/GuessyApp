<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".GetStartedActivity">

    <!-- Menampilakn Gambar Splash Screen -->
    <ImageView
        android:id="@+id/gs_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash" />

    <!-- Menampilkan Pesan "Welcome" ke Player -->
    <TextView
        android:id="@+id/gs_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/scada_regular"
        android:text="Welcome to"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_below="@id/gs_image"/>

    <!-- Menampilkan Nama Aplikasi GUESSY -->
    <TextView
        android:layout_gravity="center"
        android:id="@+id/gs_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/scada_regular"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gs_welcome"/>

    <!-- Tombol Navigasi untuk melanjutkan ke Menu Memasukkan Nama -->
    <Button
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="216dp"
        android:height="44dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/fredoka_one_regular"
        android:onClick="started"
        android:textSize="20sp"
        android:text="Get Started"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>