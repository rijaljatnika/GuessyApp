<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".EnterNameActivity">

    <!-- Menampilakn Label Nama untuk perintah Memasukkan Nama -->
    <TextView
        android:id="@+id/labelNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_centerHorizontal="true"
        android:text="Enter Your Name"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_above="@id/editNama"/>

    <!-- Memasukkan Nama Player -->
    <EditText
        android:id="@+id/editNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:width="281dp"
        android:height="41dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <!-- Tombol untuk Melanjutkan ke Main Menu-->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:width="150dp"
        android:height="38dp"
        android:onClick="submitNama"
        android:background="@drawable/rounded"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/fredoka_one_regular"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editNama"/>

</RelativeLayout>