<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="@drawable/scorelist">

    <TextView
        android:id="@+id/scoreNomor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="1"
        android:fontFamily="@font/scada_bold"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/scorelist"
        android:backgroundTint="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/scoreUsername"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/scada_bold"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/scoreNomor"/>

    <TextView
        android:id="@+id/scoreScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_toEndOf="@id/scoreUsername"
        android:layout_toRightOf="@id/scoreUsername"
        />

</RelativeLayout>